generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  shadowUrl = env("SHADOW_URL")
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  votesFor       Pokemon @relation(name: "votesFor", fields: [votedForId], references: [id])
  votedForId     Int
  votesAgainst   Pokemon @relation(name: "votesAgainst", fields: [votedAgainstId], references: [id])
  votedAgainstId Int
}

model Pokemon {
  id Int @id

  name        String
  spriteUrl   String
  VoteFor     Vote[] @relation("votesFor")
  VoteAgainst Vote[] @relation("votesAgainst")
}
